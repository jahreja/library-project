
<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= run.title %>">
</div>

<div>
    <label>Location</label>
    <select name="location">
    <% locations.forEach(location => { %>
        <% if (location.id === run.location) { %> 
            <option selected label ="<%= location.name %>" value="<%= location.id %>">
            </option>
        <% } else { %>
            <option label ="<%= location.name %>" value="<%= location.id %>">
            </option>
        <% } %> 
    <% }) %>
    </select>
</div>

<div>
    <label>Distance (km)</label>
    <input type="number" name="distance" value="<%= run.distance %>">
</div>

<div>
    <label>Run Type</label>
    <select name="runType">
        <option value="Other">Other</option>
        <option value="Long Run">Long Run</option>
        <option value="Easy Run">Easy Run</option>
        <option value="Interval Run">Interval Run</option>
        <option value="Tempo Run">Tempo Run</option>
    </select>
</div>

<div>
    <label>Map</label>
    <input type="file" name="cover" class="filepond">
</div>

<div>
    <label>Description</label>
    <textarea name="description"><%= run.description %> </textarea>
</div>